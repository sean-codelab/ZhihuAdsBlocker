{
	"manifest_version": 2,
	"name": "Zhihu ads blocker",
	"version": "0.3",
	"permissions": [
		"webRequest",
		"tabs",
		"contextMenus",
		"*://*.zhihu.com/"
	],
	"icons": {
		"16": "images/block.png"
	},
	"background": {
		"scripts": [
			"zhihuFilter.js",
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.zhihu.com/*"
			],
			"css": [
				"zhihuBlockerStyles.css"
			],
			"js": [
				"lib.js"
			]
		}
	],
	"browser_action": {
		"default_icon": "images/icon.png"
	}
}
